// Brute Force
// Time: O(nÂ²)
// Space: O(n)
-----------------------------------------------------------------------------------------------------
-----------------------------------------------------------------------------------------------------

class Solution {
    public int maximumEnergy(int[] energy, int k) {
        int n = energy.length;

        int maxEnergy = Integer.MIN_VALUE;

        for(int start = 0; start < n; start++)
        {
            int i = start;

            int e = 0;
            while(i < n)
            {
                e += energy[i];
                i += k;  
            }

            maxEnergy = Math.max(e, maxEnergy);
        }

        return maxEnergy;
    }
}

-----------------------------------------------------------------------------------------------------
-----------------------------------------------------------------------------------------------------

// Optimal Approach
// Time: O()
// Space: O()
