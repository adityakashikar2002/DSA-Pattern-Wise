// Brute Force
// Time: O(nÂ²)
// Space: O(1)
----------------------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------------------
/**
    sabse simple tarika hoga ki sare subarrays check kr lo (Brute Force)
*/
class Solution {
    public int subarraySum(int[] nums, int k) {
        int n = nums.length;
        int ans = 0;

        int sum = 0;

        for(int i = 0; i < n; i++)
        {
            sum = 0;
            
            for(int j = i; j < n; j++)
            {
                sum += nums[j];

                if(sum == k)
                    ans++;
            }
        }

        return ans;
    }
}
