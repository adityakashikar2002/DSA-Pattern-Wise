// Time: O(n)
// Space: O(n)
----------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------
class Solution {
    public int countPartitions(int[] nums) {
        int n = nums.length;
        int partitions = 0;

        int[] prefixSum = new int[n];
        prefixSum[0] = nums[0];

        for(int i = 1; i < n; i++)
            prefixSum[i] = prefixSum[i - 1] + nums[i];
        
        int totalSum = prefixSum[n - 1];
        
        for(int i = 0; i < n - 1; i++)
        {
            if((prefixSum[i] - (totalSum - prefixSum[i])) % 2 == 0)
                partitions++;
        }

        return partitions;
    }
}
