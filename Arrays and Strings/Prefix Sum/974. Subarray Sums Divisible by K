// Brute Approach
// Time: O(nÂ²)
// Space: O(1)
--------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------

/**
    sabse asan tarika hoga ki sare subarrays me sum nikalo aur count maintain kro
*/
class Solution {
    public int subarraysDivByK(int[] nums, int k) {
        int n = nums.length;

        int count = 0;

        for(int i = 0; i < n; i++)
        {   
            int sum = 0;

            for(int j = i; j < n; j++)
            {
                sum += nums[j];

                if(sum % k == 0)
                    count++;
            }
        }

        return count;
    }
}
--------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------
// Optimal Approach
// Time: O()
// Space: O()
--------------------------------------------------------------------------------------------------------
