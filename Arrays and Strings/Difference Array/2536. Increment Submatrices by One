// Brute Approach
// Time: O(Q x n²)
// Space: O(n²)
---------------------------------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------------------
class Solution {
    public int[][] rangeAddQueries(int n, int[][] queries) {
        
        int[][] res = new int[n][n];

        for(int i = 0; i < queries.length; i++)
        {
            int sr = queries[i][0];
            int sc = queries[i][1];
            int er = queries[i][2];
            int ec = queries[i][3];

            for(int r = sr; r <= er; r++)
            {
                for(int c = sc; c <= ec; c++)
                {
                    res[r][c]++;
                }
            }
        }

        return res;
    }
}
---------------------------------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------------------
// Optimal Approach - use Difference Array simulation of 1D in 2D Array
// Time: O(Q x n + n²)
// Space: O(n²)
---------------------------------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------------------
