// Time: O(n)
// Space: O(n)
------------------------------------------------------------------------------------------------------------------
class Solution {
    public boolean isValid(String s) {
        char[] charArr = s.toCharArray();

        Stack<Character> st = new Stack<>();

        for(int i = 0; i < charArr.length; i++)
        {
            char ch = charArr[i];
            
            if(ch == '(' || ch == '{' || ch == '[')
                st.push(ch);
            else
            {
                if(st.isEmpty())
                    return false;
                
                char top = st.pop();
                
                if((ch == ')' && top != '(') || (ch == '}' && top != '{') || (ch == ']' && top != '[')) 
                {
                    return false;
                }
            }
        } 

    
        return st.isEmpty();
    }
}
