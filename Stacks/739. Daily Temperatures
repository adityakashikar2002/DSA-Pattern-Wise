// Brute Approach
// Time: O(nÂ²)
// Space: O(n)
----------------------------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------------------------
class Solution {
    public int[] dailyTemperatures(int[] temperatures) {
        int n = temperatures.length;
        int[] ans = new int[n];

        for(int i = 0; i < n; i++)
        {
            int wait = 0;

            for(int j = i + 1; j < n; j++)
            {
                if(temperatures[j] > temperatures[i])
                {
                    wait++;
                    ans[i] = wait;
                    break;
                }
                else
                    wait++;
            }

        }

        return ans;
    }
}

----------------------------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------------------------

