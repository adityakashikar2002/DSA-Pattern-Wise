// Brute Force
// Time: O(nÂ²)
// Space: O(1)
--------------------------------------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------------------------------------
class Solution {
    public long subArrayRanges(int[] nums) {
        int n = nums.length;

        long sum = 0;

        for(int i = 0; i < n; i++)
        {
            int largest = nums[i];
            int smallest = nums[i]; 

            for(int j = i; j < n; j++)
            {
                smallest = Math.min(smallest, nums[j]);
                largest = Math.max(largest, nums[j]);

                sum += largest - smallest;
            }
        }

        return sum;
    }
}
--------------------------------------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------------------------------------
// Optimal Approach
// Time: O()
// Space: O()
