// Brute Approach
// Time: O(nÂ³)
// Space: O(1)
------------------------------------------------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------------------------------------------------
class Solution {
    public boolean find132pattern(int[] nums) {
        int n = nums.length;

        for(int i = 0; i <= n - 3; i++)
        {
            for(int j = i + 1; j <= n - 2; j++)
            {
                for(int k = j + 1; k <= n - 1; k++)
                {
                    if(nums[k] > nums[i] && nums[k] < nums[j])
                        return true;
                }
            }
        }

        return false;
    }
}
