// Brute Force
// Time: O(nÂ²)
// Space: O(n)
---------------------------------------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------------------------
class Solution {
    static ArrayList<Integer> preGreaterEle(int[] arr) {
        // code here
        int n = arr.length;
        
        ArrayList<Integer> res = new ArrayList<>(Collections.nCopies(n, -1));
        
        for(int i = 0; i < n; i++)
        {
            if(i == 0)
            {
                continue;
            }
            
            for(int j = i - 1; j >= 0; j--)
            {
                if(arr[j] > arr[i])
                {
                    res.set(i, arr[j]);
                    break;
                }
            }
        }
        
        return res;
    }
}

---------------------------------------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------------------------
// Optimal Approach
// Time: O(n)
// Space: O(n)
---------------------------------------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------------------------
