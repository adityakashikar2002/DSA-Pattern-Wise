// Brute Approach - Using Stack
// Time: O(n)
// Space: O(n)
--------------------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------------------
/*
    sabse asan tarika yee hoga stack me simulate kro jo stack me bacha utne minimum add
    krne padenge
*/
class Solution {
    public int minParentheses(String s) {
        // code here
        int n = s.length();
        
        Stack<Character> st = new Stack<>();
        
        for(char ch : s.toCharArray())
        {
            if(ch == '(')
            {
                st.push('(');
            }
            else 
            {
                if(!st.isEmpty() && st.peek() == '(')
                {
                    st.pop();
                }
                else
                {
                    st.push(')');
                }
                
            }
        }
        
        return st.size();
    }
}
--------------------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------------------
// Optimal Approach - Without Using Stack
// Time: O(n)
// Space: O(1)
--------------------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------------------
/*
    dusra tarika hoga balance krne ka kitne balance krne hai (needed)
    aur kitne balance ho skhte hai with open braces (open)
    
    har open '(' k liye 
    open++ krenge
    
    agar ')' aya to check krenge kya open > 0 hai ??
    
    agar hai matlab pichla char '(' ye tha so balance kr diya 
    open--
    
    agar open < 0 hai matlab hame direct yee mila ')' 
    so isko balance krna hai 
    needed++
*/
class Solution {
    public int minParentheses(String s) {
        // code here
        int n = s.length();
        int open = 0;
        int needed = 0;
        
        for(char ch : s.toCharArray())
        {
            if(ch == '(')
            {
                open++;
            }
            else
            {
                if(open > 0)
                {
                    open--;
                }
                else
                {
                    needed++;
                }
                
            }
        }
        
        return open + needed;
    }
}

