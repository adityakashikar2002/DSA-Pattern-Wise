// Brute Force
// Time: O(nÂ²)
// Space: O(1)
----------------------------------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------------------------------
class Solution {
    public int sumSubarrayMins(int[] arr) {
    
        int n = arr.length;
        int MOD = 1_000_000_007;

        long sum = 0;

        for(int i = 0; i < n; i++)
        {
            int minimum = arr[i];

            for(int j = i; j < n; j++)
            {
                minimum = Math.min(minimum, arr[j]);

                sum += minimum;
            }
        }

        return (int) (sum % MOD);
    }
}
----------------------------------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------------------------------
// Optimal Approach
// Time: O(n)
// Space: O(n)
