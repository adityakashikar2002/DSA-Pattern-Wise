// Approach 1 - Using Recursion
// Time: O(n)
// Space: O(n)
------------------------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------------------------
class Solution {
    public int nthFibonacci(int n) {
        // code here
        
        if(n == 0)
            return 0;
        if(n == 1)
            return 1;
        
        return nthFibonacci(n - 2) + nthFibonacci(n - 1);
    }
}
------------------------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------------------------

// Approach 2 - Without Recursion
// Time: O(n)
// Space: O(1)
------------------------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------------------------
class Solution {
    public int nthFibonacci(int n) {
        // code here
        
        if(n == 0)
            return 0;
        if(n == 1)
            return 1;
        
        
        int f = 0;
        int s = 1;
        
        int ans = 0;
        
        for(int i = 2; i <= n; i++)
        {
            ans = f + s;
            f = s;
            s = ans;
        }
        
        return ans;
    }
}
