// Approach 1 - Using Recursion
// Time: O(log₃ n)
// Space: O(log₃ n)
--------------------------------------------------------------------------
--------------------------------------------------------------------------
class Solution {
    public boolean isPowerOfThree(int n) {
        if(n == 1)
            return true;
        
        if(n == 0)
            return false;
        
        if(n % 3 != 0)
            return false;

        return isPowerOfThree(n / 3);
    }
} 
--------------------------------------------------------------------------
--------------------------------------------------------------------------

// Approach 2 - Without Recursion
// Time: O(log₃ n)
// Space: O(1)
--------------------------------------------------------------------------
--------------------------------------------------------------------------
public boolean isPowerOfThree(int n) 
{
    if (n <= 0) return false;

    while (n % 3 == 0) 
    {
        n /= 3;
    }
    return n == 1;
}
