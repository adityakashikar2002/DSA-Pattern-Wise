// Approach 1 - Using Recursion
// Time: O(log₂ n)
// Space: O(log₂ n)
-------------------------------------------------------------------------------
-------------------------------------------------------------------------------
class Solution {
    public boolean isPowerOfTwo(int n) {
        
        if(n == 0)
            return false;

        if(n == 1)
            return true;
        
        if(n % 2 != 0)
            return false;
        
        return isPowerOfTwo(n / 2);
    }
}
-------------------------------------------------------------------------------
-------------------------------------------------------------------------------

// Approach 2 - Without Recursion
// Time: O(log₂ n)
// Space: O(1)
-------------------------------------------------------------------------------
-------------------------------------------------------------------------------
class Solution {
    public boolean isPowerOfTwo(int n) {
        
        if(n == 0)
            return false;
            
        while(n % 2 == 0)
            n = n / 2;
        
        if(n == 1)
            return true;
        
        return false;
    }
}
