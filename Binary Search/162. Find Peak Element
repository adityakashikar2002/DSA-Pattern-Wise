// Brute Force
// Time: O(n)
// Space: O(1)
-------------------------------------------------------------------------------
class Solution {
    public int findPeakElement(int[] nums) {
        int n = nums.length;
        int index = -1;

        for(int i = 0; i < n; i++)
        {
            if(i == 0)
            {
                if(nums[i] > nums[i + 1])
                    index = i;
            }
            else if(i == n - 1)
            {
                if(nums[i] > nums[i - 1])
                    index = i;
            }
            else
            {
                if(nums[i] > nums[i - 1] && nums[i] > nums[i + 1])
                    index = i;
            }
        }

        return index;
    }
}

-------------------------------------------------------------------------------
// Optimal Solution
// Time: O(log n)
// Space: O(1)
-------------------------------------------------------------------------------
