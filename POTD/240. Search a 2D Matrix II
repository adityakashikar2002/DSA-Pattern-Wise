// Time: O(m + n)
// Space: O(1)
---------------------------------------------------------------------------------------------------------------
class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int m = matrix.length;
        int n = matrix[0].length;
        // simple idea hai
        // ek mid column pakad lo, agar hum top-right corner pakadte hai to hame
        // dekhna hai ki kya target uss column me hai, ye kab hoga ??

        // ye tab hoga jab column ki value < target hogi
        // to agar badi hai column ghatao
        // agar kum hai to row me aage badho bss
        // vishay khtam ðŸ˜Ž

        int c = n - 1;
        int r = 0;

        while(c >= 0 && r < m)
        {
            if(matrix[r][c] == target) // agar target k barabar hai to return maro
                return true;

            if(matrix[r][c] > target) // agar value badi hai matlab uss column me to nhi hogi,
            {                         // kyuki uss column me sari values increasing order me hai
                c--;
            }
            else                      // agar kum hui to bss uss column me dekho aag bad k
            {
                r++;
            }
        }

        return false;
    }
}
