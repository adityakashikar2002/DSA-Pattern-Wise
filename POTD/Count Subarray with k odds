// Approach - 1 Reducing Problem to Find the number of subarrays whose sum is exactly k
// Time: O(n)
// Space: O(n)
------------------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------------------
/*
    Simple Idea yee hoga, ki sare odds ko 1, evens ko 0 kr do
    
    phir hame bss un subarrays ko dhoondna hai jisme sum k hai
    
    Problem reduces to : Find the number of subarrays whose sum is exactly k
*/
class Solution {
    public int countSubarrays(int[] arr, int k) {
        // code here
        int n = arr.length;
        int count = 0;
        
        HashMap<Integer, Integer> map = new HashMap<>();
        
        for(int i = 0; i < n; i++)
        {
            if(arr[i] % 2 == 0)
                arr[i] = 0;
            else
                arr[i] = 1;
        }
        
        int sum = 0;
        
        for(int i = 0; i < n; i++)
        {
            sum += arr[i];
            
            if(sum == k)
                count++;
            
            if(map.containsKey(sum - k))
                count += map.get(sum - k);
            
            map.put(sum, map.getOrDefault(sum, 0) + 1);
        }
        
        return count;
    }
}
