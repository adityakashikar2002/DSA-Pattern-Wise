class Solution {
    public int longestBalanced(String s) {
        int n = s.length();

        int maxLen = 0;

        for(int i = 0; i < n; i++)
        {
            int[] freq = new int[26];

            for(int j = i; j < n; j++)
            {
                char ch = s.charAt(j);
                freq[ch - 97]++;

                if(checkBalancedFreq(freq))
                    maxLen = Math.max(maxLen, j - i + 1);
            }
        }

        return maxLen;
    }

    public boolean checkBalancedFreq(int[] freq)
    {
        int count = 0;

        for(int i = 0; i < 26; i++)
        {
            if(freq[i] == 0)
                continue;
            
            if(count == 0)
                count = freq[i];
            else if(freq[i] != count)
                return false;
        }

        return true;
    }
}
