// Time: O(n)
// Space: O(1)
----------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------

class Solution {
    public int finalValueAfterOperations(String[] operations) {
        int n = operations.length;
        int x = 0;

        for(String str : operations)
        {
            switch(str)
            {
                case "++X":
                    ++x;
                    break;

                case "X++":
                    x++;
                    break;

                case "--X":
                    --x;
                    break;
                
                case "X--":
                    x--;
                    break;
                
                default:
                    break;
            }
        }

        return x;
    }
}
