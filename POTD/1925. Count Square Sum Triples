// Brute Approach
// Time: O(n³)
// Space: O(1)
-----------------------------------------------------------------------------
-----------------------------------------------------------------------------
class Solution {
    public int countTriples(int n) {
        int count = 0;

        for(int i = 1; i <= n; i++)
        {
            for(int j = 1; j <= n; j++)
            {
                for(int k = 1; k <= n; k++)
                {
                    if(i * i + j * j == k * k)
                        count++;
                }
            }
        }

        return count;
    }
}
-----------------------------------------------------------------------------
-----------------------------------------------------------------------------

// Better Approach
// Time: O(n²)
// Space: O(1)
-----------------------------------------------------------------------------
-----------------------------------------------------------------------------
/*
    simple idea ye hoga ki agar hum observe kre to hume bss yee sare a, b pairs ko check krna hai

    ki kya sqrt{a^2 + b^2} <= n hai kya aur sqrt{a^2 + b^2} ek int hai kya ??

    matlab floor_val == curr_val bss
*/
class Solution {
    public int countTriples(int n) {
        int count = 0;

        for(int i = 1; i <= n; i++)
        {
            for(int j = 1; j <= n; j++)
            {
                double x = Math.sqrt(i * i + j * j);

                if(Math.floor(x) == x && x <= n)
                    count++;
            }
        }

        return count;
    }
}
