// Optimal Solution -- Uttam Solution ðŸ˜…

// Time Complexity: O((n * k) log(k))
// Space Complexity: O(1) 
----------------------------------------------------------------------------------------------------------------------------------

/*
class Node {
    int data;
    Node next;

    Node(int x) {
        data = x;
        next = null;
    }
}
*/

/*
    sabse aasan aur behtareen tarika / optimal way to solve this question hoga
    merge sort laga do bhai ðŸ˜‚
    aur head return maar do
*/
class Solution {
    public static Node merge(Node head1, Node head2)
    {
        
        Node dummy = new Node(-1);
        Node temp = dummy;
        
        while(head1 != null && head2 != null)
        {
            if(head1.data <= head2.data)
            {
                temp.next = head1;
                temp = head1;
                head1 = head1.next;
            }
            else
            {
                temp.next = head2;
                temp = head2;
                head2 = head2.next;
            }
        }
        
        if (head1 != null)
            temp.next = head1;
            
        if (head2 != null)
            temp.next = head2;
            
        return dummy.next;
    }
    
    public static Node mergeSortLL(int low, int high, Node[] arr)
    {
        if(low >= high)
            return arr[low]; // agar low aur high equal ho gaya to vo list to already sorted hai so return maar do
            
        int mid = (low + high) / 2;
        
        Node head1 = mergeSortLL(low, mid, arr);
        Node head2 = mergeSortLL(mid + 1, high, arr);
        Node head = merge(head1, head2);
        
        return head;
    }
    
    Node mergeKLists(Node[] arr) {
        // code here
        int n = arr.length; // k
        
        int low = 0;
        int high = n - 1;
        
        Node head = mergeSortLL(low, high, arr);
        
        return head;
    }
}
