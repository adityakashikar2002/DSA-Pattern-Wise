// Time: O(n)
// Space: O(n)
-----------------------------------------------------------------
class Solution {
    public int[] sumZero(int n) {
        int[] A = new int[n];
        for (int i = 0; i < n; i++)
            A[i] = i * 2 - n + 1;
        return A;
    }
}
-----------------------------------------------------------------
class Solution {
    public int[] sumZero(int n) {
        int[] res = new int[n];

        res[0] = - (n * (n - 1)) / 2;

        for(int i = 1; i < n; i++)
        {
            res[i] = i;
        }

        return res;
    }
}
