// Brute Force
// Time: O(nÂ²)
// Space: O(1)
---------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------
class Solution {
    static int inversionCount(int arr[]) {
        // Code Here
        int n = arr.length;
        
        int count = 0;
        
        for(int i = 0; i < n; i++)
        {
            for(int j = i + 1; j < n; j++)
            {
                if(arr[i] > arr[j])
                    count++;
            }
        }
        
        return count;
    }
}
---------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------

// Optimal Approach
// Time: O()
// Space: O()
---------------------------------------------------------------------------------------
