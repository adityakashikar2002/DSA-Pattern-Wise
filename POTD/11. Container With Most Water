// Brute Force 
// Time: O(nÂ²)
// Space: O(1)
--------------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------------
class Solution {
    public int maxArea(int[] height) {
        int n = height.length;

        int maxWater = 0;

        for(int i = 0; i < n; i++)
        {
            for(int j = i + 1; j < n; j++)
            {
                int area = Math.min(height[i], height[j]) * (j - i);
                maxWater = Math.max(maxWater, area);
            }
        }

        return maxWater;
    }
}

--------------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------------
// Optimal Approach
// Time: O(n)
// Space: O(1)
--------------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------------
