// Brute Force
// Time: O(nÂ²)
// Space: O(1)
----------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------
class Solution {
    int maxProduct(int[] arr) {
        // code here
        int n = arr.length;
        int maxRes = Integer.MIN_VALUE;
        
        for(int i = 0; i < n; i++)
        {
            int prod = 1;
            
            for(int j = i; j < n; j++)
            {
                prod *= arr[j];
                maxRes = Math.max(maxRes, prod);
            }
            
        }
        
        return maxRes;
    }
}
----------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------
// Optimal Approach
// Time: O(n)
// Space: O(1)
----------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------
