/*
    idea yee hai ki, 1st ele to hoga hi hoga

    bss hame 1st min aur 2nd min track krenge

    tab hi minCost = nums[0] + 1st min + 2nd
*/
class Solution {
    public int minimumCost(int[] nums) {
        int cost = nums[0];

        int fMin = Integer.MAX_VALUE;
        int sMin = Integer.MAX_VALUE;

        for(int i = 1; i < nums.length; i++)
        {
            if(nums[i] < fMin)
            {
                sMin = fMin;
                fMin = nums[i]; 
            }
            else if(nums[i] < sMin)
            {
                sMin = nums[i];
            }

        }

        return cost + fMin + sMin;
    }
}
