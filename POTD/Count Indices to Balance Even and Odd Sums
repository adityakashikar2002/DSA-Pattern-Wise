// Brute Approach
// Time: O(nÂ²)
// Space: O(1)
-------------------------------------------------------------------------------------------------------
-------------------------------------------------------------------------------------------------------
class Solution {
    public int cntWays(int[] arr) {
        // code here
        int n = arr.length;
        int count = 0;
        
        for(int i = 0; i < n; i++)
        {
            int evenSum = 0;
            int oddSum = 0;
            
            int index = 0;
            
            for(int j = 0; j < n; j++)
            {
                if(j == i)
                    continue;
                
                if(index % 2 == 0)
                    evenSum += arr[j];
                else
                    oddSum += arr[j];
                
                index++;
                
            }
            
            if(evenSum == oddSum)
                    count++;
        }
        
        return count;
    }
}
-------------------------------------------------------------------------------------------------------
-------------------------------------------------------------------------------------------------------
// Optimal Approach
// Time: O(n)
// Space: O(1)
