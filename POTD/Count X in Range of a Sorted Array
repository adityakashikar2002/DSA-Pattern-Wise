// Brute Approach
// Time: O(q x n)
// Space: O(1)
---------------------------------------------------------------------------------
---------------------------------------------------------------------------------
class Solution {
    public ArrayList<Integer> countXInRange(int[] arr, int[][] queries) {
        // code here
        ArrayList<Integer> res = new ArrayList<>();
        
        int n  = arr.length;
        int q = queries.length;
        
        for(int i = 0; i < q; i++)
        {
            int count = 0;
            
            for(int j = queries[i][0]; j <= queries[i][1]; j++)
            {
                if(arr[j] == queries[i][2])
                    count++;
            }
            
            res.add(count);
        }
        
        return res;
    }
}
---------------------------------------------------------------------------------
---------------------------------------------------------------------------------

// Optimal Approach
// Time: O()
// Space: O(1)
---------------------------------------------------------------------------------
---------------------------------------------------------------------------------
