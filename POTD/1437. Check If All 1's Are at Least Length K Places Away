// Time: O(n)
// Space: O(1)
-----------------------------------------------------------------------------
-----------------------------------------------------------------------------
class Solution {
    public boolean kLengthApart(int[] nums, int k) {
        int n = nums.length;

        int lastSeen = -1;

        for(int i = 0; i < n; i++)
        {
            if(nums[i] == 1)
            {
                if(lastSeen == -1)
                    lastSeen = i;
                else
                {
                    if(i - lastSeen - 1 < k)
                        return false;
                    else
                        lastSeen = i;
                }
            }        
        }

        return true;
    }
}
