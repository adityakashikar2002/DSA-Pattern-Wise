// Time Complexity: O(rows)
// Space Complexity: O(1)
-------------------------------------------------------------------
class Solution {
    public int areaOfMaxDiagonal(int[][] dimensions) {
        int r = dimensions.length;
        int c = dimensions[0].length;

        double maxDiagonal = Double.MIN_VALUE;

        int maxArea = -1;

        for(int i = 0; i < r; i++)
        {
            int l = dimensions[i][0];
            int b = dimensions[i][1];

            double diagonal = Math.sqrt(l * l + b * b);
            
            int area = l * b;

            if(diagonal > maxDiagonal)
            {
                maxDiagonal = diagonal;
                maxArea = area;
            }
            else if(diagonal == maxDiagonal && area > maxArea)
            {
                maxArea = area;
            }
        }

        return maxArea;
    }
}
