// Brute Approach
// Time: O(nÂ²)
// Space: O(1)
--------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------
class Solution {
    public int numberOfSubstrings(String s) {
        int n = s.length();

        int cZeroes;
        int cOnes;

        int res = 0;

        for(int i = 0; i < n; i++)
        {
            cZeroes = 0;
            cOnes = 0;

            for(int j = i; j < n; j++)
            {
                char ch = s.charAt(j);

                if(ch == '0')
                    cZeroes++;
                else
                    cOnes++;

                if(cOnes >= cZeroes * cZeroes)
                    res++;
            }
        }

        return res;
    }
}
--------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------
// Optimal Approach
// Time: O()
// Space: O()
--------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------
