// Time: O(n)
// Space: O(n)
---------------------------------------------------------------------------
---------------------------------------------------------------------------
class Solution {
    public int[] constructTransformedArray(int[] nums) {
        int n = nums.length;

        int[] res = new int[n]; 

        for(int i = 0; i < n; i++)
        {
            
            if (nums[i] == 0) 
            {
                res[i] = nums[i];
            } 
            else 
            {
                int j = (i + nums[i]) % n;

                if (j < 0)
                    j += n;
                    
                res[i] = nums[j];
            }
        }

        return res;
    }
}
