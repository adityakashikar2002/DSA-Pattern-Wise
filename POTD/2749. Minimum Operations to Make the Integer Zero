Time Complexity:  O(num1 / num2)
Space Complexity:  O(1)
-------------------------------------------------------------------------------------------------
class Solution {
    public int makeTheIntegerZero(int num1, int num2) {
        int t = 0;

        while (true) {
            long val = (long) num1 - (long) t * num2;

            if (val < 0) {
                return -1;
            }

            // Use Long.bitCount() in Java instead of __builtin_popcountll
            if (Long.bitCount(val) <= t && t <= val) {
                return t;
            }

            t++;
        }
    }
}
