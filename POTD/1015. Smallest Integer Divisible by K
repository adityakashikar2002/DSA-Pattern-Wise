// Time: O(k)
// Space: O(1)
----------------------------------------------------------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------------------------------------------------------
/*
    idea simple hai, apn agar 1, 11, 111, aisa simulate krte jaye to shayad number 64 bit se baher chala jaega
    rahi baat number ki , sab 1's se bana hai so k = 2 or k = 5 k liye to kaam krega hi nhi sidha -1 return kr do

    ab apn 1 se k tak both inclusive simulate krenge division ko
    apn numbers nhi remainder ko leke simulate krenge

    like 11 hai k = 3

    rem = 2 

    ab rem = (rem * 10 + 1) % k kya dega (20 + 1) % 3 

    21 % 3 == 0

    matlab 111 yee number aur iska length 2 hai so return maar denge

    ab 1 se k tak hi kyu jaenge kyuki iske beech me nhi hua matlab kahi repeat hua hoga so...
*/
class Solution {
    public int smallestRepunitDivByK(int k) {
        if(k == 1)
            return 1;
        
        if(k == 2 || k == 5)
            return -1;
        
        int rem = 0;

        for(int ans = 1; ans <= k; ans++)
        {
            rem = (rem * 10 + 1) % k;

            if(rem == 0)
                return ans; 
        }

        return -1;
    }
}
