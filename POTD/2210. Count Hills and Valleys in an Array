class Solution {
    public int countHillValley(int[] nums) {
        int i = 0;
        int j = i + 1;


        int c = 0;
        while(j < nums.length - 1)
        {
            if(nums[j] > nums[i] && nums[j] > nums[j + 1] || nums[j] < nums[i] && nums[j] < nums[j + 1])
            {
                c++;
                i = j;
            }
            
            j++;
        }

        return c;
    }
}
