// Time: O(n)
// Space: O(1)
---------------------------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------------

// idea ye hai ki kis tarah hum pata kr skhte ki ek naya char suru hua hai socho..
class Solution {
    public boolean isOneBitCharacter(int[] bits) {
        int i = 0;
        int n = bits.length;

        while (i < n - 1) 
        {   // Stop before last bit
            if (bits[i] == 1)
                i += 2;     
            else
                i += 1;
        }

        // If we land exactly on last index, it's a one-bit char
        return i == n - 1;
    }
}
