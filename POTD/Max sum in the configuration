// Brute Force
// Time: O(nÂ²)
// Space: O(1)
-----------------------------------------------------------------------------------
-----------------------------------------------------------------------------------
class Solution {
    int maxSum(int[] arr) {
        // code here
        int n = arr.length;
        int maxS = Integer.MIN_VALUE;
        
        for(int i = 0; i < n; i++)
        {
            int sum = 0;
            
            for(int j = 0; j < n; j++)
            {
                sum += j * arr[(i + j) % n];
            }
            
            maxS = Math.max(maxS, sum);
        }
        
        return maxS;
    }
}
-----------------------------------------------------------------------------------
-----------------------------------------------------------------------------------
// Optimal Approach
// Time: O(n)
// Space: O(1)
-----------------------------------------------------------------------------------
-----------------------------------------------------------------------------------
