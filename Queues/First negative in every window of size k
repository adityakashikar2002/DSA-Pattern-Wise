// Brute Approach
// Time: O(nÂ²)
// Space; O(1)
------------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------------
class Solution {
    static List<Integer> firstNegInt(int arr[], int k) {
        // write code here
        
        int n = arr.length;
        
        List<Integer> res = new ArrayList<>();
        
        for(int i = 0; i <= n - k; i++)
        {
            boolean negFound = false;
            
            for(int j = i; j < i + k; j++)
            {
                if(arr[j] < 0)
                {
                    negFound = true;
                    
                    res.add(arr[j]);
                    break;
                }
            }
            
            if(!negFound)
                res.add(0);
        }
        
        return res;
    }
}
------------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------------
// Optimal Approach
// Time: O()
// Space; O()
