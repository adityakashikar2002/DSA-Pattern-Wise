// Brute Approach
// Time: O(n x k)
// Space: O(1)
---------------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------
class Solution {
    public int kBitFlips(int[] arr, int k) {
        // code here
        int n = arr.length;
        
        int minFlips = 0;
        
        for(int i = 0; i < n; i++)
        {
            // agar already 1 to no flip
            if(arr[i] == 1)
                continue;
            
            if(i + k > n) // window k baher jaa raha to -1 return kr do
                return -1;
                
            for(int j = i; j < i + k; j++)
            {
                arr[j] = arr[j] == 1 ? 0 : 1; // 0 ka 1 , 1 ka 0
                // or arr[j] ^= 1;
            }
            
            minFlips++; // kitne baar flip kiya uska count++
        }
        
        return minFlips;
    }
}

---------------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------
// Better Approach
// Time: O()
// Space: O()
---------------------------------------------------------------------------------------------
