// Approach - 1
// Time: O(n)
// Space: O(n)
----------------------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------------------
class Solution {
    public static int distributeTicket(int n, int k) {
        // code here
        
        if(n == k)
            return n;
        
        Deque<Integer> dq = new ArrayDeque<>();
        
        for(int i = 1; i <= n; i++)
        {
            dq.addLast(i);
        }
        
        while(dq.size() > 1)
        {
            for(int i = 0; i < k && dq.size() > 1; i++)
            {
                dq.removeFirst();
            }
            
            for(int i = 0; i < k && dq.size() > 1; i++)
            {
                dq.removeLast();
            }
        }
        
        return dq.removeLast();
        
    }
}
