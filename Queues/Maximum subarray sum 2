// Brute Approach
// Time: O(nÂ²)
// Space: O(1)
------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------
class Solution {
    public int maxSubarrSum(int[] arr, int a, int b) {
        // code here
        int n = arr.length;
        
        int maxSum = Integer.MIN_VALUE;
        
        for(int k = a; k <= b; k++)
        {
            int sum = 0;
            int mSum = Integer.MIN_VALUE; 
            
            for(int i = 0; i < k; i++)
            {
                sum += arr[i];
            }
            
            mSum = sum;
            
            for(int i = k; i < n; i++)
            {
                sum = sum - arr[i - k] + arr[i];
                
                if(sum > mSum)
                {
                    mSum = sum;
                }
            }
            
            if(mSum > maxSum)
            {
                maxSum = mSum;
            }
        }
        
        return maxSum;
    }
}
------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------
// Optimal Approach
// Time: O()
// Space: O()
------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------
